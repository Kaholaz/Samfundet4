{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "python.linting.pylintPath": ".venv/bin/pylint",
  // "python.envFile": "${workspaceFolder}/.env",
  // "python.envFile": "${workspaceFolder}/backend/.python.env",
  "python.linting.pylintArgs": [
    "--django-settings-module",
    "backend.root.settings"
    // "--rcfile",
    // "./backend/.pylintrc",
    // "--init-hook",
    // "from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.dirname(find_pylintrc()))"
  ],
  // Hide import regions automatically, e.g. (.js)
  // Automatically set filetype when opening a new file.
  // Change layout of the upper title
  "window.title": "ðŸŸ¥ ${activeEditorShort}${separator}${rootName}",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.testing.pytestEnabled": true,
  "python.formatting.provider": "yapf",
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#fff",
    "titleBar.activeBackground": "#a03033",
    "titleBar.inactiveBackground": "#a03033",
    "editorCursor.foreground": "#ff2222"
  },
  // "python.testing.pytestArgs": [
  //   "."
  // ],
  "python.testing.unittestEnabled": false,
  "eslint.enable": true,
  "eslint.format.enable": true,
  "diffEditor.codeLens": true,
  "explorer.incrementalNaming": "smart",
  // Stylelint
  "css.validate": false, // Disable vscode defaults
  "less.validate": false, // Disable vscode defaults
  "scss.validate": false, // Disable vscode defaults
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  }
}